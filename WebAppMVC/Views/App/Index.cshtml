
@model IEnumerable<MovieModel>
@{
    ViewData["Title"] = "App Index";
}
<a asp-controller="App" class="btn btn-success mb-3" asp-action="AddOrEdit">Add</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Genero</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
        <tr>
                <td>@item.Id</td>
                <td>@item.Nombre</td>
                <td>@item.Genero</td>
                <td>
                    <div style="display: flex">
                        <div>
                            <a class="btn btn-warning btn-sm" style="margin-right: 5px" asp-controller="App" asp-route-id="@item.Id" asp-action="AddOrEdit">Edit</a>
                        </div>
                        <div>
                            <form asp-controller="App" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Esta seguro de eliminar Movie?')">
                                 <button class="btn btn-danger btn-sm" type="submit">Eliminar</button>
                             </form>
                        </div>
                    </div>
                    
                    
                </td>
        </tr>
        }
       
    </tbody>
</table>
<a asp-controller="App" asp-action="Index">Ir Atras</a>
